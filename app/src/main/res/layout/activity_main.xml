<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:scaleType="centerCrop"
    tools:context="com.sardegnaisoladicavalli.example.showjumpingchrono.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <com.sardegnaisoladicavalli.example.showjumpingchrono.CustomChrono
                android:id="@+id/chronometer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Chronometer"
                android:textColor="@color/textColor"
                android:textSize="@dimen/chronoSize" />

            <LinearLayout
                android:id="@+id/chrono_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin"
                android:layout_marginLeft="@dimen/button_sideMargin"
                android:layout_marginRight="@dimen/button_sideMargin"
                android:layout_marginTop="@dimen/button_margin"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/startButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="startChrono"
                    android:text="@string/chrono_start"
                    android:textColor="@color/textColor"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/stopButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="stopChrono"
                    android:text="@string/chrono_stop"
                    android:textColor="@color/textColor"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/parentPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/button_sideMargin"
                        android:layout_marginRight="@dimen/button_sideMargin"
                        android:gravity="center"
                        android:text="@string/rider_1"
                        android:textColor="@color/scoreColor"
                        android:textSize="@dimen/nameSize" />

                    <Button
                        android:id="@+id/one_pen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/button_margin"
                        android:layout_marginLeft="@dimen/button_sideMargin"
                        android:layout_marginRight="@dimen/button_sideMargin"
                        android:layout_marginTop="@dimen/button_margin"
                        android:layout_weight="1"
                        android:onClick="addTimePens"
                        android:text="@string/one_pen"
                        android:textColor="@color/textColor"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/four_pens"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/button_margin"
                        android:layout_marginLeft="@dimen/button_sideMargin"
                        android:layout_marginRight="@dimen/button_sideMargin"
                        android:layout_marginTop="@dimen/button_margin"
                        android:layout_weight="1"
                        android:onClick="addCoursePens"
                        android:text="@string/four_pens"
                        android:textColor="@color/textColor"
                        android:textStyle="bold" />

                    <TableLayout
                        android:id="@+id/result_table"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/main_container"
                        android:layout_gravity="left"
                        android:layout_marginBottom="@dimen/text_margin"
                        android:layout_marginRight="@dimen/table_sideMargin"
                        android:layout_marginTop="@dimen/button_margin">

                        <TableRow>

                            <TextView
                                android:layout_gravity="left"
                                android:layout_marginRight="@dimen/text_margin"
                                android:padding="@dimen/table_element_padding"
                                android:text="@string/table_layout_chrono"
                                android:textAllCaps="true"
                                android:textColor="@color/scoreColor" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:id="@+id/time_set"
                                android:gravity="left"
                                android:padding="@dimen/table_element_padding"
                                android:text="00:00:00"
                                android:textColor="@color/scoreColor"
                                android:textSize="@dimen/scoreSize" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_gravity="left"
                                android:layout_marginRight="@dimen/text_margin"
                                android:padding="@dimen/table_element_padding"
                                android:text="@string/table_layout_course_pens"
                                android:textAllCaps="true"
                                android:textColor="@color/scoreColor" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:id="@+id/course_pens"
                                android:gravity="left"
                                android:padding="@dimen/table_element_padding"
                                android:text="0"
                                android:textColor="@color/scoreColor"
                                android:textSize="@dimen/scoreSize" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_gravity="left"
                                android:layout_marginRight="@dimen/text_margin"
                                android:padding="@dimen/table_element_padding"
                                android:text="@string/table_layout_time_pens"
                                android:textAllCaps="true"
                                android:textColor="@color/scoreColor" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:id="@+id/time_pens"
                                android:gravity="left"
                                android:padding="@dimen/table_element_padding"
                                android:text="0"
                                android:textColor="@color/scoreColor"
                                android:textSize="@dimen/scoreSize" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_gravity="left"
                                android:layout_marginRight="@dimen/text_margin"
                                android:padding="@dimen/table_element_padding"
                                android:text="@string/table_layout_total_pens"
                                android:textAllCaps="true"
                                android:textColor="@color/scoreColor" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:id="@+id/total_pens"
                                android:gravity="left"
                                android:padding="@dimen/table_element_padding"
                                android:text="0"
                                android:textColor="@color/scoreColor"
                                android:textSize="@dimen/scoreSize" />
                        </TableRow>

                    </TableLayout>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/text_margin"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/button_sideMargin"
                        android:layout_marginRight="@dimen/button_sideMargin"
                        android:gravity="center"
                        android:text="@string/rider_2"
                        android:textColor="@color/scoreColor"
                        android:textSize="@dimen/nameSize" />

                    <Button
                        android:id="@+id/one_pen2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/button_margin"
                        android:layout_marginLeft="@dimen/button_sideMargin"
                        android:layout_marginRight="@dimen/button_sideMargin"
                        android:layout_marginTop="@dimen/button_margin"
                        android:layout_weight="1"
                        android:onClick="addTimePens2"
                        android:text="@string/one_pen"
                        android:textColor="@color/textColor"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/four_pens2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/button_margin"
                        android:layout_marginLeft="@dimen/button_sideMargin"
                        android:layout_marginRight="@dimen/button_sideMargin"
                        android:layout_marginTop="@dimen/button_margin"
                        android:layout_weight="1"
                        android:onClick="addCoursePens2"
                        android:text="@string/four_pens"
                        android:textColor="@color/textColor"
                        android:textStyle="bold" />

                    <TableLayout
                        android:id="@+id/result_table2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/main_container"
                        android:layout_gravity="right"
                        android:layout_marginBottom="@dimen/text_margin"
                        android:layout_marginLeft="@dimen/table_sideMargin"
                        android:layout_marginTop="@dimen/button_margin">

                        <TableRow>

                            <TextView
                                android:layout_gravity="right"
                                android:layout_marginRight="@dimen/text_margin"
                                android:padding="@dimen/table_element_padding"
                                android:text="@string/table_layout_chrono"
                                android:textAllCaps="true"
                                android:textColor="@color/scoreColor" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:id="@+id/time_set2"
                                android:gravity="right"
                                android:padding="@dimen/table_element_padding"
                                android:text="00:00:00"
                                android:textColor="@color/scoreColor"
                                android:textSize="@dimen/scoreSize" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:gravity="right"
                                android:padding="@dimen/table_element_padding"
                                android:text="@string/table_layout_course_pens"
                                android:textAllCaps="true"
                                android:textColor="@color/scoreColor" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:id="@+id/course_pens2"
                                android:gravity="right"
                                android:padding="@dimen/table_element_padding"
                                android:text="0"
                                android:textColor="@color/scoreColor"
                                android:textSize="@dimen/scoreSize" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:gravity="right"
                                android:padding="@dimen/table_element_padding"
                                android:text="@string/table_layout_time_pens"
                                android:textAllCaps="true"
                                android:textColor="@color/scoreColor" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:id="@+id/time_pens2"
                                android:gravity="right"
                                android:padding="@dimen/table_element_padding"
                                android:text="0"
                                android:textColor="@color/scoreColor"
                                android:textSize="@dimen/scoreSize" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_gravity="right"
                                android:padding="@dimen/table_element_padding"
                                android:text="@string/table_layout_total_pens"
                                android:textAllCaps="true"
                                android:textColor="@color/scoreColor" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:id="@+id/total_pens2"
                                android:gravity="right"
                                android:padding="@dimen/table_element_padding"
                                android:text="0"
                                android:textColor="@color/scoreColor"
                                android:textSize="@dimen/scoreSize" />
                        </TableRow>

                    </TableLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/totalTextViews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/main_container">

            <TextView
                android:id="@+id/total_TeamPensText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/table_element_padding"
                android:text="@string/team_total"
                android:gravity="right"
                android:textColor="@color/scoreColor"
                android:textSize="@dimen/scoreSize" />

            <TextView
                android:id="@+id/total_TeamPens"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/table_element_padding"
                android:text="0"
                android:textColor="@color/scoreColor"
                android:textSize="@dimen/scoreSize"
                android:gravity="center"/>

        </LinearLayout>

        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/totalTextViews"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/screenBottom_margin"
            android:layout_marginTop="@dimen/screenBottom_margin"
            android:onClick="resetAll"
            android:text="@string/reset"
            android:textColor="@color/textColor"
            android:textStyle="bold" />

    </RelativeLayout>


</ScrollView>
